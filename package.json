{
    "name": "stylescape",
    "description": "Stylescape is a visual identity framework developed by Scape Agency.",
    "version": "0.0.18",
    "config": {
        "version_short": "0.0"
    },
    "keywords": [
        "stylescape",
        "sass",
        "responsive",
        "front-end",
        "layout-engine",
        "framework",
        "web"
    ],
    "homepage": "https://www.scape.style/",
    "author": "Lars van Vianen",
    "contributors": [
        "Scape Agency"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/scape-agency/stylescape.git"
    },
    "bugs": {
        "url": "https://github.com/scape-agency/stylescape/issues"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/scape-foundation"
        }
    ],
    "main": "src/scss/index.scss",
    "type": "module",
    "module": "",
    "sass": "",
    "style": "",
    "scripts": {
        "format": "npx prettier --write .",
        "lint": "eslint 'src/**/*.ts' || true",
        "prettify": "prettier --write 'src/**/*.ts'",
        "build": "npm run build-compile && npm run build-process",
        "build-compile": "tsc -p bin/tsconfig.json",
        "build-process": "node bin/js/index.js",
        "webpack-build": "npm run webpack-prod",
        "webpack-dev": "webpack --mode development --config webpack.config.js",
        "webpack-prod": "webpack --mode production --config webpack.config.js",
        "webpack-serve": "webpack serve --mode development --config webpack.config.js",
        "webpack-start": "webpack-dev-server --mode development --config webpack.config.js"
    },
    "devDependencies": {
        "@babel/core": "^7.23.7",
        "@babel/preset-env": "^7.23.8",
        "@babel/preset-typescript": "^7.23.3",
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^8.1.0",
        "@types/node": "^20.10.8",
        "@types/semver": "^7.5.6",
        "@types/webpack": "^5.28.5",
        "autoprefixer": "^10.4.16",
        "babel-loader": "^9.1.3",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.9.0",
        "css-minimizer-webpack-plugin": "^5.0.1",
        "del": "^7.1.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-webpack": "^0.13.8",
        "eslint-plugin-prettier": "^5.1.2",
        "fs-extra": "^11.2.0",
        "glob": "^10.3.10",
        "html-webpack-plugin": "^5.6.0",
        "hue.gl": "git+ssh://git@github.com:scape-agency/hue.gl.git",
        "icon.gl": "git+ssh://git@github.com:scape-agency/icon.gl.git",
        "lodash": "^4.17.21",
        "mini-css-extract-plugin": "^2.7.6",
        "page.gl": "git+ssh://git@github.com:scape-agency/page.gl.git",
        "postcss-loader": "^7.3.4",
        "postcss-preset-env": "^9.3.0",
        "prettier": "^3.1.1",
        "sass": "^1.69.7",
        "sass-loader": "^13.3.3",
        "style-loader": "^3.3.4",
        "terser": "^5.26.0",
        "terser-webpack-plugin": "^5.3.10",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "unit.gl": "git+ssh://git@github.com:scape-agency/unit.gl.git",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1",
        "webpack-merge": "^5.10.0"
    },
    "files": [
        "dist/js/**/*.{js,map}",
        "dist/css/**/*.{css,map}",
        "dist/font/**/*.{eot,otf,ttf,woff,woff2}",
        "src/ts/**/*.ts",
        "src/scss/**/*.scss",
        "src/font/**/*.{ttf,woff,woff2}"
    ],
    "hugo-bin": {
        "buildTags": "extended"
    },
    "jspm": {
        "registry": "npm",
        "main": "",
        "directories": {},
        "shim": {},
        "dependencies": {},
        "peerDependencies": {}
    }
}
